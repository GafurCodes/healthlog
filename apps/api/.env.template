# Server Configuration
NODE_ENV=development
PORT=4000

# Database
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/healthlog?retryWrites=true&w=majority

# JWT Secrets
JWT_ACCESS_SECRET=your_access_token_secret_key_here_change_in_production
JWT_REFRESH_SECRET=your_refresh_token_secret_key_here_change_in_production
JWT_ACCESS_EXPIRES=15m
JWT_REFRESH_EXPIRES=7d

# CORS
CORS_ORIGIN=http://localhost:5173

# Email Service (Nodemailer)
EMAIL_FROM=noreply@healthlog.app
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password_here

# Application URLs
APP_BASE_URL=http://localhost
API_BASE_URL=http://localhost:4000/api